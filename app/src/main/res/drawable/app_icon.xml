<svg viewBox="0 0 512 512"
    xmlns="http://www.w3.org/2000/svg">
    <!-- Background circle -->
    <circle
        cx="256"
        cy="256"
        r="256"
        fill="#303030" />

    <!-- Light bulb -->
    <g transform="translate(160, 100)">
        <!-- Bulb body with gradient -->
        <defs>
            <linearGradient
                id="bulbGradient"
                x1="0%"
                y1="0%"
                x2="100%"
                y2="100%">
                <stop
                    offset="0%"
                    stop-color="#FFEB3B" />
                <stop
                    offset="100%"
                    stop-color="#4CAF50" />
            </linearGradient>
        </defs>

        <!-- Bulb shape -->
        <path
            d="M96,0 C149,0 192,43 192,96 C192,158 144,182 144,216 L48,216 C48,182 0,158 0,96 C0,43 43,0 96,0z"
            fill="url(#bulbGradient)" />

        <!-- Bulb base -->
        <rect
            x="48"
            y="216"
            width="96"
            height="24"
            fill="#CFD8DC" />
        <rect
            x="58"
            y="240"
            width="76"
            height="16"
            fill="#B0BEC5" />
        <rect
            x="68"
            y="256"
            width="56"
            height="16"
            fill="#90A4AE" />

        <!-- Light glowing effect -->
        <circle
            cx="96"
            cy="96"
            r="88"
            fill="#FFEB3B"
            opacity="0.2" />
    </g>

    <!-- Remote control D-pad -->
    <g transform="translate(256, 400)">
        <!-- D-pad outline -->
        <rect
            x="-60"
            y="-20"
            width="120"
            height="40"
            rx="5"
            fill="#424242" />

        <!-- Left arrow -->
        <polygon
            points="-40,0 -20,0 -25,-10 -20,0 -25,10"
            fill="#FFFFFF" />

        <!-- Right arrow -->
        <polygon
            points="40,0 20,0 25,-10 20,0 25,10"
            fill="#FFFFFF" />
    </g>

    <!-- Light rays -->
    <g
        stroke-width="8"
        stroke-linecap="round"
        opacity="0.7">
        <line
            x1="256"
            y1="60"
            x2="256"
            y2="85"
            stroke="#FFEB3B" />
        <line
            x1="120"
            y1="196"
            x2="145"
            y2="196"
            stroke="#FFEB3B" />
        <line
            x1="392"
            y1="196"
            x2="367"
            y2="196"
            stroke="#4CAF50" />
        <line
            x1="161"
            y1="101"
            x2="142"
            y2="82"
            stroke="#FFEB3B" />
        <line
            x1="351"
            y1="101"
            x2="370"
            y2="82"
            stroke="#4CAF50" />
    </g>
</svg>