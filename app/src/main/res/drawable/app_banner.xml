<svg viewBox="0 0 320 180" xmlns="http://www.w3.org/2000/svg">
    <!-- Background -->
    <rect width="320" height="180" fill="#212121"/>

    <!-- Light glow effect -->
    <circle cx="100" cy="90" r="50" fill="#FFEB3B" opacity="0.2"/>
    <circle cx="220" cy="90" r="50" fill="#4CAF50" opacity="0.2"/>

    <!-- Left light bulb (bedroom) -->
    <g transform="translate(80, 70)">
        <!-- Bulb body -->
        <path d="M20,0 C31,0 40,9 40,20 C40,33 30,38 30,45 L10,45 C10,38 0,33 0,20 C0,9 9,0 20,0z" fill="#FFEB3B"/>

        <!-- Bulb base -->
        <rect x="10" y="45" width="20" height="5" fill="#CFD8DC"/>
        <rect x="12" y="50" width="16" height="3" fill="#B0BEC5"/>
        <rect x="14" y="53" width="12" height="3" fill="#90A4AE"/>

        <!-- Light rays -->
        <line x1="20" y1="-10" x2="20" y2="-5" stroke="#FFEB3B" stroke-width="2"/>
        <line x1="0" y1="20" x2="-5" y2="20" stroke="#FFEB3B" stroke-width="2"/>
        <line x1="40" y1="20" x2="45" y2="20" stroke="#FFEB3B" stroke-width="2"/>
        <line x1="5" y1="5" x2="0" y2="0" stroke="#FFEB3B" stroke-width="2"/>
        <line x1="35" y1="5" x2="40" y2="0" stroke="#FFEB3B" stroke-width="2"/>
    </g>

    <!-- Right light bulb (bathroom) -->
    <g transform="translate(200, 70)">
        <!-- Bulb body -->
        <path d="M20,0 C31,0 40,9 40,20 C40,33 30,38 30,45 L10,45 C10,38 0,33 0,20 C0,9 9,0 20,0z" fill="#4CAF50"/>

        <!-- Bulb base -->
        <rect x="10" y="45" width="20" height="5" fill="#CFD8DC"/>
        <rect x="12" y="50" width="16" height="3" fill="#B0BEC5"/>
        <rect x="14" y="53" width="12" height="3" fill="#90A4AE"/>

        <!-- Light rays -->
        <line x1="20" y1="-10" x2="20" y2="-5" stroke="#4CAF50" stroke-width="2"/>
        <line x1="0" y1="20" x2="-5" y2="20" stroke="#4CAF50" stroke-width="2"/>
        <line x1="40" y1="20" x2="45" y2="20" stroke="#4CAF50" stroke-width="2"/>
        <line x1="5" y1="5" x2="0" y2="0" stroke="#4CAF50" stroke-width="2"/>
        <line x1="35" y1="5" x2="40" y2="0" stroke="#4CAF50" stroke-width="2"/>
    </g>

    <!-- Remote control arrows -->
    <g transform="translate(150, 140)">
        <!-- Left arrow -->
        <polygon points="0,0 -15,0 -10,-5 -15,0 -10,5" fill="#FFFFFF"/>

        <!-- Right arrow -->
        <polygon points="0,0 15,0 10,-5 15,0 10,5" fill="#FFFFFF"/>
    </g>

    <!-- App name -->
    <text x="160" y="35" font-family="Arial" font-size="18" font-weight="bold" text-anchor="middle" fill="#FFFFFF">TV Light Control</text>
</svg>